<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_cover_art_zona"
            android:layout_width="match_parent"
            android:layout_height="411dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/cover_art_zona">
        </ImageView>

        <Button
            android:id="@+id/login_with_username"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="385dp"
            android:layout_height="126dp"
            android:text="@string/login_with_username"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColorLink="@android:color/holo_green_light" />


        <!--<Button-->
            <!--android:id="@+id/login_not_username"-->
            <!--android:layout_width="426dp"-->
            <!--android:layout_height="305dp"-->
            <!--android:text="@string/login_not_username"-->
            <!--android:textAppearance="@style/TextAppearance.AppCompat.Display2"/>-->

    </LinearLayout>

</LinearLayout>
